<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.kuntz.oglgamemastershelper.StatBlock">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/creature_name"
        />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_below="@id/creature_name"
        android:id="@+id/grid_thing">

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="co.kuntz.oglgamemastershelper.views.SingleAttributeView"
            android:id="@+id/ability_strength"
            android:layout_column="0"
            android:layout_row="0"/>

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="co.kuntz.oglgamemastershelper.views.SingleAttributeView"
            android:id="@+id/ability_dexterity"/>

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="co.kuntz.oglgamemastershelper.views.SingleAttributeView"
            android:id="@+id/ability_constitution"/>

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="co.kuntz.oglgamemastershelper.views.SingleAttributeView"
            android:id="@+id/ability_intelligence" />

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="co.kuntz.oglgamemastershelper.views.SingleAttributeView"
            android:id="@+id/ability_wisdom" />

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="co.kuntz.oglgamemastershelper.views.SingleAttributeView"
            android:id="@+id/ability_charisma"/>
    </GridLayout>


</RelativeLayout>
